extends /views/layouts/index.pug

block head
    title= "Guides"
    meta(name="description" content="Guides let you learn more about the world")
    link(href="https://anlexn.github.io/guides" rel="canonical")
    link(href="manifest.json" rel="manifest")
    meta(name="format-detection" content="telephone=no")
    meta(name="theme-color" content="#2196f3")
    link(href="public/images/icon/hero192.png" rel="icon" sizes="192x192")

    script(type="application/ld").
        {
            "@context": "http://schema.org",
            "@type": "Person",
            "name": "anlex N",
            "url": "https://anlexn.github.io",
            "sameAs": [
              "https://github.com/anlexN",
              "https://twitter.com/anlex_N"
            ]
        }

block stylesheet
    style
        if development
            include /public/stylesheets/index.css
            include /public/stylesheets/description/index.css
            include /public/stylesheets/drawer/index.css
            include /public/stylesheets/homepage/index.css
        else
            include /public/stylesheets/homepage.min.css
block content
    input#checker(type="checkbox")
    label(for="checker")
        div
    ul.drawer
        li
          a(href="views/convention/index.html" l10n="Convention") Convention
        li
          a(href="views/donate/index.html" l10n="Donate") Donate
        li
          select(name="locales")
            option(id="zh" value="zh") 中文
            option(id="en" value="en") English
            option(id="fr" value="fr") Français
            option(id="it" value="it") italiano
            option(id="ja" value="ja") 日本語
            option(id="ko" value="ko") 한국어
            option(id="ru" value="ru") русский
            option(id="uk" value="uk") український
    h1(l10n="Guides").header Guides
    dl.description
        dt(l10n="Created reason") Created reason
        dd(l10n="the world") the world is organized, meaningful, elegant!
        dd(l10n="summarize") summarize my experience
    script(async)
        if development
            include /public/javascripts/homepage.js
        else
            include /public/javascripts/homepage.min.js
        
    