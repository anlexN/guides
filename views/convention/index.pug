extends /views/layouts/index.pug

block stylesheet
    style
        include /public/stylesheets/convention/index.css
        include /public/stylesheets/description/index.css
        include /public/stylesheets/lefter/index.css

block content
    a.lefter(href=".") ←
    a(href="https://github.com/anlexN/mongoose-model") mongoose-model

    dl.description
      dt 5 Case
      dd camelCase: first letter lowercase, but after that all words uppercase
        ol
          li
            q function, instance, object, property, variable
            pre.
              function thisFuction() {},
              const thisInstance = new thisFunction(),
              const thisObject = { myProperty : 1 }
      dd hyphen-case: all words is lowercase, but words have a hyphen to each other
        ol
          li
            q url
            pre.
              https://git-scm.com
          li
            q folder and file name, more than one word   
            pre.
              📂 models
                  📂 thing
                      📂 action
                          📂 achieve-action
                          📂 access-action
                          📂 consume-action
                          📂 ...
                          demo-index.js
          
      dd lowercase: all letters lowercase
        ol
          li
            q folder and file name, only one word
            pre.
              📂 models
                  📂 thing
                      📂 action
                      📂 creativework
                      📂 event
                      📂 ...
                      index.js

      dd PascalCase: all words is lowercase, but first letter is uppercase
        ol
          li
            q class, constructor, function library, singleton
            pre.
              const ThingSchema = new mongoose.Schema({});
              class GoodUser {};
      dd UPPERCASE: all letters uppercase
        ol
          li
            q acrony
      dt Space
      dd between diffrent languages
      dd between number and unit
      dt Html
      dd do not use lower levels to decrease heading font size: use the CSS font-size property instead
      dd do not skip heading levels: always start from h1, next use h2 and so on
      dd do not use h1 more than once on a page
      dt Note
      dd full words
        ol
          li
            pre.
              //wrong
              function q() {}

              //right
              function query() {}
      dd the official terminology
        ol
          li
            pre.
              Android, IOS, iPhone, Google
      dd english punctuation
        ol
          li
            pre.
              Hello 世界!
      dd dark text on white background
      dd no trailing or leading underscore